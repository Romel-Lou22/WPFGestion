<UserControl x:Class="SistemaGestion.View.FacturasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SistemaGestion.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Cabecera de Compra y selección de Producto -->
            <RowDefinition Height="*"/>
            <!-- Detalles -->
            <RowDefinition Height="Auto"/>
            <!-- Pie (Total y botones) -->
        </Grid.RowDefinitions>

        <!-- Cabecera de la Compra -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Registrar Compra" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <!-- Selección de Proveedor -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Proveedor:" Width="120" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding ListaProveedores}"
                          DisplayMemberPath="Nombre"
                          SelectedValuePath="ProveedorId"
                          SelectedValue="{Binding Compra.ProveedorId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Width="200"/>
            </StackPanel>
            <!-- Selección de Producto y botón para agregar -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Producto:" Width="120" VerticalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding ListaProductos}"
                          DisplayMemberPath="Nombre"
                          SelectedItem="{Binding SelectedProducto, Mode=TwoWay}"
                          Width="200"/>
                <Button Content="Agregar Producto"
                        Command="{Binding AgregarDetalleCommand}"
                        Margin="10,0,0,0"/>
                <Button Content="Eliminar Producto"
                        Command="{Binding EliminarDetalleCommand}"
                        Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Detalles de la Compra (DataGrid) -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Compra.Detalles}" AutoGenerateColumns="False" CanUserAddRows="False"
                   SelectedItem="{Binding DetalleSeleccionado, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Producto" Binding="{Binding NombreProducto}" Width="*"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="*"/>
                <DataGridTextColumn Header="Precio Unitario" Binding="{Binding PrecioUnitario}" Width="*"/>
                <DataGridTextColumn Header="Total" Binding="{Binding TotalDetalle}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pie: Total y Botones -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Total Compra:" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Compra.TotalCompra}" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <Button Content="Registrar Compra" Command="{Binding RegistrarCompraCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
