<UserControl x:Class="SistemaGestion.View.ReportesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SistemaGestion.VistaModelo;assembly=SistemaGestion"
             xmlns:local="clr-namespace:SistemaGestion.VistaModelo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Converter para enlazar el enum ReporteTipo con el IsChecked de los RadioButtons -->
        <local:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Background="ForestGreen" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="Auto"/>
            <!-- Selección de Reporte -->
            <RowDefinition Height="Auto"/>
            <!-- Filtro de Fechas y botón Consultar -->
            <RowDefinition Height="*"/>
            <!-- DataGrid para resultados -->
            <RowDefinition Height="Auto"/>
            <!-- Botón de Exportar PDF -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Reportes"
                   FontSize="30"
                   HorizontalAlignment="Center"
                   Margin="0,10"
                   Grid.Row="0"/>

        <!-- RadioButtons para seleccionar el tipo de reporte -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10"
                    Grid.Row="1">
            <RadioButton Content="Compras"
                         GroupName="ReportType"
                         Margin="10,0"
                         IsChecked="{Binding ReporteSeleccionado, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Compras}"/>
            <RadioButton Content="Ventas"
                         GroupName="ReportType"
                         Margin="10,0"
                         IsChecked="{Binding ReporteSeleccionado, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Ventas}"/>
        </StackPanel>

        <!-- Filtro de Fechas y botón Consultar -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10"
                    Grid.Row="2">
            <StackPanel Orientation="Vertical" Margin="10,0">
                <TextBlock Text="Desde:"/>
                <DatePicker SelectedDate="{Binding FechaInicio, Mode=TwoWay}" Width="120"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="10,0">
                <TextBlock Text="Hasta:"/>
                <DatePicker SelectedDate="{Binding FechaFin, Mode=TwoWay}" Width="120"/>
            </StackPanel>
            <Button Content="Consultar"
                    Command="{Binding ConsultarCommand}"
                    Margin="10,0"/>
        </StackPanel>

        <!-- DataGrid para mostrar resultados -->
        <DataGrid x:Name="dgReportes"
                  Grid.Row="3"
                  Margin="10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  ItemsSource="{Binding Reportes}">
            <DataGrid.Columns>
                <!-- Ejemplo de columnas, ajusta según tu ReporteModel -->
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat={}{0:dd/MM/yyyy}}" Width="150"/>
                <DataGridTextColumn Header="Total Ventas" Binding="{Binding Total, StringFormat=C}" Width="100" Visibility="{Binding EsReporteVentas, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <DataGridTextColumn Header="Total Compras" Binding="{Binding TotalCompra, StringFormat=C}" Width="100" Visibility="{Binding EsReporteCompras, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="120"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botón para Exportar a PDF -->
        <Button x:Name="btnExportarPDF"
                Content="Exportar PDF"
                Grid.Row="4"
                HorizontalAlignment="Center"
                Margin="0,10"
                Width="120"
                Command="{Binding ExportarPDFCommand}"/>
    </Grid>
</UserControl>
