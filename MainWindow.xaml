<Window x:Class="SistemaGestion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:viewModel="clr-namespace:SistemaGestion.VistaModelo"
        xmlns:local="clr-namespace:SistemaGestion.View"
        mc:Ignorable="d"
        Title="Sistema Punto Venta" Height="650" Width="1200"
        ResizeMode="CanResize"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <!-- #region Window DataContext and Resources -->
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <!-- Definición de recursos de color -->
        <SolidColorBrush x:Key="MenuBackground" Color="#333333"/>
        <SolidColorBrush x:Key="ContentBackground" Color="#2c3e50"/>
        <SolidColorBrush x:Key="TextColor" Color="White"/>

        <!-- DataTemplates para los ViewModels -->
        <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
            <local:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:VentasViewModel}">
            <local:VentasView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ProvedoresViewModel}">
            <local:ProvedoresView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ProductosViewModel}">
            <local:ProductosView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ClientesViewModel}">
            <local:ClientesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:StockViewModel}">
            <local:StockView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:FacturasViewModel}">
            <local:FacturasView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ReportesViewModel}">
            <local:ReportesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:FinanzasViewModel}">
            <local:FinanzasView/>
        </DataTemplate>

        <!-- Estilo para el botón Toggle del menú (FontAwesome) -->
        <Style TargetType="ToggleButton" x:Key="CustomToggleButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource TextColor}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para iconos (se pueden ampliar según se requiera) -->
        <Style x:Key="btnShowHide" TargetType="{x:Type fa:IconImage}"/>
    </Window.Resources>
    <!-- #endregion -->

    <!-- #region Outer Border and Layout -->
    <Border CornerRadius="10" BorderThickness="1" Padding="5">
        <Border CornerRadius="10" BorderThickness="1">
            <!-- Gradiente del borde modificado para armonizar con la paleta -->
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2c3e50" Offset="0"/>
                    <GradientStop Color="#333333" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <!-- Layout principal en Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Columna izquierda: Menú -->
                    <ColumnDefinition Width="250" x:Name="MenuColumn"/>
                    <!-- Columna derecha: Contenido -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- #region Left Menu -->
                <Border CornerRadius="10,0,0,10" Grid.Column="0" Background="{StaticResource MenuBackground}">
                    <StackPanel>
                        <!-- Logo y título del sistema -->
                        <StackPanel Orientation="Horizontal" Height="35" Margin="15,25,0,40">
                            <Image Source="/Images/tarjeta-electronica.png" Height="30" Width="30"/>
                            <TextBlock Text="SISTEMA POS"
                                       Foreground="{StaticResource TextColor}"
                                       FontSize="20"
                                       FontFamily="Montserrat"
                                       FontWeight="Medium"
                                       FontStyle="Oblique"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                            <!-- Botón Toggle para mostrar/ocultar el menú -->
                            <ToggleButton x:Name="ToggleMenuButton"
                                          Width="30" Height="30"
                                          Margin="10,0,0,0"
                                          Style="{StaticResource CustomToggleButtonStyle}">
                                <fa:IconImage Icon="Bars"
                                              Foreground="{StaticResource TextColor}"
                                              Width="20" Height="20" />
                                <ToggleButton.Triggers>
                                    <!-- Menú colapsado -->
                                    <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                        <BeginStoryboard>
                                            <Storyboard x:Name="HidePanel">
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MenuColumn"
                                                    Storyboard.TargetProperty="Width">
                                                    <DiscreteObjectKeyFrame KeyTime="0:0:0.5" Value="75"/>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <!-- Menú expandido -->
                                    <EventTrigger RoutedEvent="ToggleButton.Checked">
                                        <BeginStoryboard>
                                            <Storyboard x:Name="ShowPanel">
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="MenuColumn"
                                                    Storyboard.TargetProperty="Width">
                                                    <DiscreteObjectKeyFrame KeyTime="0:0:0.5" Value="250"/>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </ToggleButton.Triggers>
                            </ToggleButton>
                        </StackPanel>

                        <!-- Título de la sección de menú -->
                        <StackPanel>
                            <TextBlock Text="PRINCIPAL"
                                       Margin="45,0,0,0"
                                       Foreground="{StaticResource TextColor}"
                                       FontSize="12"
                                       FontWeight="Light"
                                       FontFamily="Montserrat"
                                       FontStyle="Oblique"/>
                        </StackPanel>

                        <!-- Opciones del menú -->
                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color1}"
                                     Command="{Binding ShowHomeViewCommand}"
                                     CommandParameter="dashboard">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Home"
                                              Style="{StaticResource menuButtonIcon}"
                                              Height="20" Width="20"
                                              Margin="5,0"
                                              />
                                <TextBlock Text="Dashboard"
                                           Style="{StaticResource menuButtonText}"
                                           Margin="10,0,0,0"
                                           FontStyle="Oblique"
                                           Foreground="{StaticResource TextColor}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color2}"
                                     Command="{Binding ShowVentasViewCommand}"
                                     CommandParameter="Ventas">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="CashRegister"
                                              Style="{StaticResource menuButtonIcon}"
                                              Height="20" Width="20"
                                              Margin="5,0"
                                              />
                                <TextBlock Text="Ventas"
                                           Style="{StaticResource menuButtonText}"
                                           Margin="10,0,0,0"
                                           FontStyle="Oblique"
                                           Foreground="{StaticResource TextColor}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color3}"
                                     IsChecked="True"
                                     Command="{Binding ShowProductosViewModel}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="BagShopping"
                                              Style="{StaticResource menuButtonIcon}"
                                              Height="20" Width="20"
                                              Margin="5,0"
                                              />
                                <TextBlock Text="Productos"
                                           Style="{StaticResource menuButtonText}"
                                           Margin="10,0,0,0"
                                           FontStyle="Oblique"
                                           Foreground="{StaticResource TextColor}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color4}"
                                     IsChecked="True"
                                     Command="{Binding ShowClientesViewModel}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Users"
                                              Style="{StaticResource menuButtonIcon}"
                                              Height="20" Width="20"
                                              Margin="5,0"
                                              />
                                <TextBlock Text="Clientes"
                                           Style="{StaticResource menuButtonText}"
                                           Margin="10,0,0,0"
                                           FontStyle="Oblique"
                                           Foreground="{StaticResource TextColor}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color5}"
                                     IsChecked="True"
                                     Command="{Binding ShowStockViewModel}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="BoxesStacked"
                                              Style="{StaticResource menuButtonIcon}"
                                              Height="20" Width="20"
                                              Margin="5,0"
                                              />
                                <TextBlock Text="Stock"
                                           Style="{StaticResource menuButtonText}"
                                           Margin="10,0,0,0"
                                           FontStyle="Oblique"
                                           Foreground="{StaticResource TextColor}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color6}"
                                     IsChecked="True"
                                     Command="{Binding ShowFacturasViewModel}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="FileInvoiceDollar"
                                              Style="{StaticResource menuButtonIcon}"
                                              Height="20" Width="20"
                                              Margin="5,0"
                                              />
                                <TextBlock Text="Facturas"
                                           Style="{StaticResource menuButtonText}"
                                           Margin="10,0,0,0"
                                           FontStyle="Oblique"
                                           Foreground="{StaticResource TextColor}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color7}"
                                     IsChecked="True"
                                     Command="{Binding ShowReporteViewModel}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="FileContract"
                                              Style="{StaticResource menuButtonIcon}"
                                              Height="20" Width="20"
                                              Margin="5,0"
                                              />
                                <TextBlock Text="Reportes"
                                           Style="{StaticResource menuButtonText}"
                                           Margin="10,0,0,0"
                                           FontStyle="Oblique"
                                           Foreground="{StaticResource TextColor}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color8}"
                                     Command="{Binding ShowProvedoresViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="TruckFast"
                                              Style="{StaticResource menuButtonIcon}"
                                              Height="20" Width="20"
                                              Margin="5,0"
                                              />
                                <TextBlock Text="Provedores"
                                           Style="{StaticResource menuButtonText}"
                                           Margin="10,0,0,0"
                                           FontStyle="Oblique"
                                           Foreground="{StaticResource TextColor}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource menuButton}"
                                     Tag="{StaticResource color10}"
                                     IsChecked="True"
                                     Command="{Binding ShowFinanzasViewModel}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="SackDollar"
                                              Style="{StaticResource menuButtonIcon}"
                                              Height="20" Width="20"
                                              Margin="5,0"
                                              />
                                <TextBlock Text="Finanzas"
                                           Style="{StaticResource menuButtonText}"
                                           Margin="10,0,0,0"
                                           FontStyle="Oblique"
                                           Foreground="{StaticResource TextColor}"/>
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>
                </Border>
                <!-- #endregion -->

                <!-- #region Right Content Area -->
                <Border CornerRadius="0,10,10,0" Grid.Column="1" Background="{StaticResource ContentBackground}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <!-- Barra de control -->
                            <RowDefinition Height="25"/>
                            <!-- Cabecera / Título -->
                            <RowDefinition Height="35"/>
                            <!-- Contenido principal -->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- #region Control Bar -->
                        <StackPanel x:Name="pnlControlBar"
                                    Grid.Row="0"
                                    Orientation="Horizontal"
                                    FlowDirection="RightToLeft"
                                    Background="Transparent"
                                    Margin="0,0,5,0"
                                    MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                    MouseEnter="pnlControlBar_MouseEnter">
                            <Button x:Name="btnClose"
                                    Style="{StaticResource controlButton}"
                                    Tag="{StaticResource color4}"
                                    Click="btnClose_Click">
                                <fa:IconImage Icon="Xmark"
                                              Style="{StaticResource controlButtonIcon}"
                                              Foreground="{StaticResource TextColor}"/>
                            </Button>
                            <Button x:Name="btnMaximize"
                                    Style="{StaticResource controlButton}"
                                    Tag="{StaticResource color6}"
                                    Click="btnMaximize_Click">
                                <fa:IconImage Icon="Square"
                                              Style="{StaticResource controlButtonIcon}"
                                              Foreground="{StaticResource TextColor}"/>
                            </Button>
                            <Button x:Name="btnMinimize"
                                    Style="{StaticResource controlButton}"
                                    Tag="{StaticResource color8}"
                                    Click="btnMinimize_Click">
                                <fa:IconImage Icon="WindowMinimize"
                                              Width="12"
                                              Style="{StaticResource controlButtonIcon}"
                                              Foreground="{StaticResource TextColor}"/>
                            </Button>
                        </StackPanel>
                        <!-- #endregion -->

                        <!-- #region Header / Caption -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <!-- Sección de Título -->
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <fa:IconImage Icon="{Binding Icon}"
                                              Height="20"
                                              Width="20"
                                              Foreground="{StaticResource TextColor}"
                                              Margin="35,0,10,0"/>
                                <TextBlock Text="{Binding Caption}"
                                           Foreground="{StaticResource TextColor}"
                                           FontSize="16"
                                           FontFamily="Montserrat"
                                           FontStyle="Oblique"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        FlowDirection="RightToLeft"
                                        VerticalAlignment="Center"
                                        Margin="0,0,10,0">
                                <Button Style="{StaticResource iconButton}"
                                        Tag="{StaticResource color1}">
                                    <fa:IconImage Icon="AngleDown"
                                                  Style="{StaticResource iconButtonIcon}"
                                                  Foreground="{StaticResource TextColor}"/>
                                </Button>
                                <TextBlock Text="{Binding CurrentUserAccount.DisplayName}"
                                           Foreground="{StaticResource TextColor}"
                                           FontFamily="Montserrat"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                                <Ellipse Height="35" Width="35"
                                         Stroke="{StaticResource color2}"
                                         StrokeThickness="2"
                                         Margin="10,0,10,0">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/Images/usuario.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <Button Style="{StaticResource iconButton}"
                                        Tag="{StaticResource color3}">
                                    <fa:IconImage Icon="Clock"
                                                  Style="{StaticResource iconButtonIcon}"
                                                  Foreground="{StaticResource TextColor}"/>
                                </Button>
                                <Button Style="{StaticResource iconButton}"
                                        Tag="{StaticResource color4}">
                                    <fa:IconImage Icon="Envelope"
                                                  Style="{StaticResource iconButtonIcon}"
                                                  Foreground="{StaticResource TextColor}"/>
                                </Button>
                                <Button Style="{StaticResource iconButton}"
                                        Tag="{StaticResource color5}">
                                    <fa:IconImage Icon="Bell"
                                                  Style="{StaticResource iconButtonIcon}"
                                                  Foreground="{StaticResource TextColor}"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <!-- #endregion -->

                        <!-- #region Main Content -->
                        <ContentControl Content="{Binding CurrentChildView}"
                                        Grid.Row="2"
                                        Margin="25"/>
                        <!-- #endregion -->
                    </Grid>
                </Border>
                <!-- #endregion -->
            </Grid>
        </Border>
    </Border>
    <!-- #endregion -->

</Window>
